<!-- Page Header -->
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @category.name %></h1>
      <p class="mt-2 text-gray-600">Category details and hierarchy</p>
    </div>
    <div class="flex items-center space-x-3">
      <% if can?('categories:update') %>
        <%= link_to edit_admin_category_path(@category), class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit Category
        <% end %>
      <% end %>
      <%= link_to admin_categories_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Categories
      <% end %>
    </div>
  </div>
</div>

<!-- Breadcrumb Navigation -->
<div class="mb-6">
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
      <li class="inline-flex items-center">
        <%= link_to admin_categories_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600" do %>
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
          </svg>
          All Categories
        <% end %>
      </li>
      <% @category.all_ancestors.reverse.each do |ancestor| %>
        <li>
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <%= link_to admin_categories_path(parent_id: ancestor.id), class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" do %>
              <%= ancestor.name %>
            <% end %>
          </div>
        </li>
      <% end %>
      <li aria-current="page">
        <div class="flex items-center">
          <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2"><%= @category.name %></span>
        </div>
      </li>
    </ol>
  </nav>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Main Content -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Category Information -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Category Information</h2>
      </div>
      <div class="px-6 py-6">
        <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">Name</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @category.name %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Type</dt>
            <dd class="mt-1">
              <% if @category.root? %>
                <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  Root Category
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                  Subcategory
                </span>
              <% end %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Depth Level</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @category.depth %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Full Path</dt>
            <dd class="mt-1 text-sm text-gray-900 font-mono"><%= @category.full_path %></dd>
          </div>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @category.description.present? ? @category.description : "No description provided" %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Subcategories -->
    <% if @category.subcategories.any? %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold text-gray-900">Subcategories</h2>
            <% if can?('categories:create') %>
              <%= link_to new_admin_category_path(parent_id: @category.id), class: "inline-flex items-center px-3 py-1.5 text-sm font-medium text-blue-600 bg-blue-50 border border-blue-200 rounded-lg hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add Subcategory
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="px-6 py-6">
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
            <% @category.subcategories.order(:name).each do |subcategory| %>
              <div class="bg-gray-50 rounded-lg p-4 border border-gray-200 hover:bg-gray-100 transition-colors duration-200">
                <div class="flex items-center justify-between">
                  <div class="flex-1 min-w-0">
                    <h3 class="text-sm font-medium text-gray-900 truncate">
                      <%= link_to admin_category_path(subcategory), class: "hover:text-blue-600" do %>
                        <%= subcategory.name %>
                      <% end %>
                    </h3>
                    <p class="text-xs text-gray-500 mt-1">
                      <%= subcategory.subcategories.count %> subcategor<%= 'y' if subcategory.subcategories.count == 1 %>ies
                    </p>
                  </div>
                  <div class="flex items-center space-x-1 ml-2">
                    <%= link_to admin_category_path(subcategory), class: "text-blue-600 hover:text-blue-900 p-1 rounded" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    <% end %>
                    <% if can?('categories:update') %>
                      <%= link_to edit_admin_category_path(subcategory), class: "text-yellow-600 hover:text-yellow-900 p-1 rounded" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Subcategories</h2>
        </div>
        <div class="px-6 py-12 text-center">
          <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No subcategories</h3>
          <p class="text-gray-500 mb-4">This category doesn't have any subcategories yet.</p>
          <% if can?('categories:create') %>
            <%= link_to new_admin_category_path(parent_id: @category.id), class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              Add First Subcategory
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Category Hierarchy -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Category Hierarchy</h2>
      </div>
      <div class="px-6 py-6">
        <div class="space-y-3">
          <% if @category.parent_category %>
            <div class="flex items-center text-sm">
              <span class="text-gray-500 mr-2">Parent:</span>
              <%= link_to admin_category_path(@category.parent_category), class: "text-blue-600 hover:text-blue-800 font-medium" do %>
                <%= @category.parent_category.name %>
              <% end %>
            </div>
          <% end %>
          <div class="flex items-center text-sm">
            <span class="text-gray-500 mr-2">Current:</span>
            <span class="font-medium text-gray-900"><%= @category.name %></span>
          </div>
          <div class="flex items-center text-sm">
            <span class="text-gray-500 mr-2">Subcategories:</span>
            <span class="font-medium text-gray-900"><%= @category.subcategories.count %></span>
          </div>
        </div>
      </div>
    </div>

  
  </div>
</div>
