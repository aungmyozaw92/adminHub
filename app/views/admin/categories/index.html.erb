<!-- Page Header -->
<div class="mb-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Categories</h1>
      <p class="mt-1 text-gray-600">Manage your category hierarchy</p>
    </div>
    <div>
      <% if can?('categories:create') %>
        <%= link_to new_admin_category_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Add Category
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<!-- Search Form -->
<div class="mb-6">
  <%= form_with url: admin_categories_path, method: :get, local: true, class: "flex items-center space-x-4" do |form| %>
    <div class="flex-1 max-w-md">
      <div class="relative">
        <%= form.text_field :search, 
            value: @search, 
            placeholder: "Search categories...", 
            class: "w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </div>
    </div>
    <%= form.submit "Search", class: "px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
    <% if @search.present? %>
      <%= link_to admin_categories_path, class: "px-4 py-2 bg-gray-500 text-white text-sm font-medium rounded-lg hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors duration-200" do %>
        Clear
      <% end %>
    <% end %>
  <% end %>
</div>

<!-- Categories Table -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200">
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Parent Category</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subcategories</th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @categories.each do |category| %>
          <tr id="category-row-<%= category.id %>" class="hover:bg-gray-50">
            <!-- Category Name -->
            <td class="px-6 py-4">
              <div class="flex items-center">
                <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                  <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                  </svg>
                </div>
                <div>
                  <div class="text-sm font-medium text-gray-900">
                    <%= category.name %>
                  </div>
                  <div class="text-xs text-gray-500">
                    Level <%= category.depth %>
                  </div>
                </div>
              </div>
            </td>
            
            <!-- Description -->
            <td class="px-6 py-4">
              <div class="text-sm text-gray-900 max-w-xs">
                <% if category.description.present? %>
                  <%= truncate(category.description, length: 60) %>
                <% else %>
                  <span class="text-gray-400 italic">No description</span>
                <% end %>
              </div>
            </td>
            
            <!-- Parent Category -->
            <td class="px-6 py-4">
              <% if category.parent_category %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  <%= category.parent_category.name %>
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Root Category
                </span>
              <% end %>
            </td>
            
            <!-- Subcategories Count -->
            <td class="px-6 py-4">
              <div class="text-sm text-gray-900">
                <%= category.subcategories.count %>
                <span class="text-gray-500">
                  subcategor<%= 'y' if category.subcategories.count == 1 %>ies
                </span>
              </div>
            </td>
            
            <!-- Actions -->
            <td class="px-6 py-4">
              <div class="flex items-center justify-center space-x-2">
                <!-- View -->
                <%= link_to admin_category_path(category), 
                    class: "text-blue-600 hover:text-blue-900 p-1.5 rounded-lg hover:bg-blue-50 transition-colors duration-200",
                    title: "View details" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                <% end %>
                
                <!-- Edit -->
                <% if can?('categories:update') %>
                  <%= link_to edit_admin_category_path(category), 
                      class: "text-yellow-600 hover:text-yellow-900 p-1.5 rounded-lg hover:bg-yellow-50 transition-colors duration-200",
                      title: "Edit category" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>
                <% end %>
                
                <!-- Add Subcategory -->
                <% if can?('categories:create') %>
                  <%= link_to new_admin_category_path(parent_id: category.id), 
                      class: "text-green-600 hover:text-green-900 p-1.5 rounded-lg hover:bg-green-50 transition-colors duration-200",
                      title: "Add subcategory" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                  <% end %>
                <% end %>
                
                <!-- Delete -->
                <% if can?('categories:delete') %>
                  <%= link_to admin_category_path(category), 
                      data: { 
                        turbo_method: :delete, 
                        turbo_confirm: "Are you sure you want to delete '#{category.name}'? This will also delete all its subcategories.",
                        turbo_stream: true
                      }, 
                      class: "text-red-600 hover:text-red-900 p-1.5 rounded-lg hover:bg-red-50 transition-colors duration-200",
                      title: "Delete category" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Pagination -->
<% if @categories.respond_to?(:current_page) && @categories.total_pages > 1 %>
  <div class="mt-6 flex items-center justify-between">
    <div class="text-sm text-gray-700">
      Showing <%= @categories.offset_value + 1 %> to <%= [@categories.offset_value + @categories.limit_value, @categories.total_count].min %> of <%= @categories.total_count %> results
    </div>
    <div class="flex items-center space-x-2">
      <%= paginate @categories, params: { search: @search, parent_id: params[:parent_id] } %>
    </div>
  </div>
<% end %>

<!-- Empty State -->
<% if @categories.empty? %>
  <div class="text-center py-12">
    <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
    </svg>
    <h3 class="text-lg font-medium text-gray-900 mb-2">
      <% if @search.present? %>
        No categories found for "<%= @search %>"
      <% else %>
        No categories yet
      <% end %>
    </h3>
    <p class="text-gray-500 mb-4">
      <% if @search.present? %>
        Try adjusting your search terms or <%= link_to "clear the search", admin_categories_path, class: "text-blue-600 hover:text-blue-800" %>.
      <% else %>
        Get started by creating your first category.
      <% end %>
    </p>
    <% unless @search.present? %>
      <% if can?('categories:create') %>
        <%= link_to new_admin_category_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Create First Category
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
