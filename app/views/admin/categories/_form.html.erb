<%= form_with model: [:admin, @category], local: true, class: "space-y-6" do |form| %>
  <% if @category.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% @category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6">
    <!-- Category Name -->
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" do %>
        Category Name <span class="text-red-500">*</span>
      <% end %>
      <%= form.text_field :name, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 focus:ring-red-500 focus:border-red-500' if @category.errors[:name].any?}",
          placeholder: "Enter category name" %>
      <% if @category.errors[:name].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @category.errors[:name].first %></p>
      <% end %>
    </div>

    <!-- Parent Category -->
    <div>
      <%= form.label :parent_category_id, "Parent Category", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :parent_category_id, 
          options_from_collection_for_select(@parent_categories, :id, :name, @category.parent_category_id),
          { prompt: "Select a parent category (leave blank for root category)" },
          { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 focus:ring-red-500 focus:border-red-500' if @category.errors[:parent_category_id].any?}" } %>
      <% if @category.errors[:parent_category_id].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @category.errors[:parent_category_id].first %></p>
      <% end %>
      <p class="mt-1 text-sm text-gray-500">
        Leave blank to create a root category, or select a parent to create a subcategory.
      </p>
    </div>

    <!-- Description -->
    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :description, 
          rows: 4,
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 focus:ring-red-500 focus:border-red-500' if @category.errors[:description].any?}",
          placeholder: "Enter category description (optional)" %>
      <% if @category.errors[:description].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @category.errors[:description].first %></p>
      <% end %>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
    <%= link_to "Cancel", admin_categories_path, 
        class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
    <%= form.submit @category.persisted? ? "Update Category" : "Create Category", 
        class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
  </div>
<% end %>
