<!-- Page Header -->
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Create New User</h1>
      <p class="mt-1 text-sm text-gray-600">Add a new user to the system with roles and permissions</p>
    </div>
    <%= link_to admin_users_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Users
    <% end %>
  </div>
</div>

<!-- Form -->
<div class="bg-white shadow rounded-lg">
  <div class="max-w-2xl mx-auto p-6">
    <%= render "form", user: @user, roles: @roles %>
  </div>
</div>