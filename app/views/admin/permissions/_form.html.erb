<%= form_with model: [:admin, @permission], local: true, class: "space-y-6" do |form| %>
  <% if @permission.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@permission.errors.count, "error") %> prohibited this permission from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @permission.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Permission Information -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Permission Information</h3>
    
    <div class="grid grid-cols-1 gap-6">
      <!-- Permission Name -->
      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 focus:ring-red-500 focus:border-red-500' if @permission.errors[:name].any?}",
            placeholder: "Enter permission name (e.g., users:create, dashboard:read)" %>
        <% if @permission.errors[:name].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @permission.errors[:name].first %></p>
        <% end %>
        <p class="mt-1 text-sm text-gray-500">
          Use the format "resource:action" (e.g., users:read, roles:create, dashboard:update)
        </p>
      </div>

      <!-- Permission Description -->
      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :description, 
            rows: 3,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 focus:ring-red-500 focus:border-red-500' if @permission.errors[:description].any?}",
            placeholder: "Describe what this permission allows users to do..." %>
        <% if @permission.errors[:description].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @permission.errors[:description].first %></p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Permission Examples -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
    <h4 class="text-sm font-medium text-blue-800 mb-2">Permission Naming Examples:</h4>
    <div class="text-sm text-blue-700 space-y-1">
      <div><strong>Dashboard:</strong> dashboard:read</div>
      <div><strong>Users:</strong> users:read, users:create, users:update, users:delete</div>
      <div><strong>Roles:</strong> roles:read, roles:create, roles:update, roles:delete</div>
      <div><strong>Profile:</strong> profile:read, profile:update</div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
    <%= link_to "Cancel", admin_permissions_path, 
        class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
    
    <%= form.submit @permission.persisted? ? "Update Permission" : "Create Permission",
        class: "px-6 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
  </div>
<% end %>
