<!-- Simple test toast without Stimulus -->
<div class="fixed top-4 right-4 z-[9999] bg-green-500 text-white p-4 rounded-lg shadow-lg max-w-sm">
  <div class="flex items-center">
    <svg class="h-6 w-6 text-white mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
    </svg>
    <span><%= message %></span>
  </div>
</div>

